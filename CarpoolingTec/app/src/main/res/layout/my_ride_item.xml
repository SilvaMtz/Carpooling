<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout_Date"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_Date"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_insert_invitation_black_24dp"/>
            <TextView
                android:id="@+id/text_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/monday_initial"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/text_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:text="@string/tuesday_initial"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/text_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:text="@string/wednesday_initial"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/text_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:text="@string/thursday_initial"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/text_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:text="@string/friday_initial"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/text_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:text="@string/saturday_initial"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/text_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:text="@string/sunday_initial"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Layout_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_Time"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_access_time_black_24dp"/>
            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="12:00"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_create_black_24dp"/>

</LinearLayout>
